@model Domains.Dtos.MemberShipsPlanDTO

<div class="container mt-5">
    <h2 class="text-center">Add Membership Plan</h2>
    <form asp-action="Create" method="post">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label for="MemberShipPlanName" class="form-label">Plan Name</label>
                    <input asp-for="MemberShipPlanName" class="form-control" placeholder="Enter plan name" />
                    <span asp-validation-for="MemberShipPlanName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Durations" class="form-label">Duration</label>
                    <input asp-for="Durations" class="form-control" placeholder="Enter duration" />
                    <span asp-validation-for="Durations" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-success">Add Plan</button>
                    <a asp-action="List" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>
