@model Domains.Dtos.TrainerDTO

@{
    ViewData["Title"] = "Add Trainer";
}
<br />
<br />
<br />
<br />


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Add Trainer</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-4">
                            <label for="TrainerName" class="form-label fw-bold">Trainer Name</label>
                            <input asp-for="TrainerName" class="form-control" placeholder="Enter trainer name" />
                            <span asp-validation-for="TrainerName" class="text-danger small"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label for="Specialization" class="form-label fw-bold">Specialization</label>
                            <input asp-for="Specialization" class="form-control" placeholder="Enter specialization" />
                            <span asp-validation-for="Specialization" class="text-danger small"></span>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success px-4 me-2">Add Trainer</button>
                            <a asp-action="List" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
