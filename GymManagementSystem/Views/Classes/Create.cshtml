<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 bg-light p-0">
            
        </div>

        <!-- Main Content -->
        <div class="col-md-9 mt-4">
            <h2 style="font-size:medium">Create New Class</h2>
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label for="ClassName" class="form-label">Class Name</label>
                    <input type="text" id="ClassName" name="ClassName" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="Schdule" class="form-label">Schedule</label>
                    <input type="datetime-local" id="Schdule" name="Schdule" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="Capacity" class="form-label">Capacity</label>
                    <input type="number" id="Capacity" name="Capacity" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="TrainerId" class="form-label">Trainer</label>
                    <select id="TrainerId" name="TrainerId" class="form-select" required>
                        @foreach (var trainer in (IEnumerable<TrainerDTO>)ViewBag.Trainers)
                        {
                            <option value="@trainer.TrainerId">@trainer.TrainerName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </div>
    </div>
</div>
